                                        <input type="password" class="form-control" id="inputPassword4" name="password"></div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                            Close                                               
                                                                                    
                                        </button>
                                        <button type="submit" class="btn btn-success">
                                            Save changes                                                
                                                                                    
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endblock %}
{% block script %}
    <script>
        function format(d) {
            // `d` is the original data object for the row
            return (
                '<table cellpadding="5" cellspacing="0" border="0" style="padding-left:50px;">' +
                '<tr>' +
                '<td>Apellidos:</td>' +
                '<td>' +
                d.apellidos +
                '</td>' +
                '</tr>' +
                '<tr>' +
                '<td>Fecha Registro:</td>' +
                '<td>' +
                d.fecha_registro +
                '</td>' +
                '</tr>' +
                '</table>'
            );
        }

        $(document).ready(function () {
            var table = $('#example').DataTable({
                ajax: 'http://localhost/proyectosPHP/DAW2/1_desarrolloServidor/trimestre1/tienda/tiendaRelentless/?controller=users&action=show',
                columns: [
                    {
                        className: 'dt-control',
                        orderable: false,
                        data: null,
                        defaultContent: '',
                    },
                    { data: 'id' },
                    { data: 'nombre' },
                    {
                        className: 'f32', // used by world-flags-sprite library
                        data: 'nacionalidad',
                        render: function (data, type) {
                            if (type === 'display') {
                                let country = '';

                                switch (data) {
                                    case 'Espa√±a':
                                        country = 'es';
                                        break;
                                    case 'Inglaterra':
                                        country = '_England';
                                        break;
                                    case 'EE.UU':
                                        country = 'us';
                                        break;
                                    case 'Francia':
                                        country = 'fr';
                                        break;
                                }

                                return '<span class="flag ' + country + '"></span> ' + data;
                            }

                            return data;
                        },
                    }, { data: 'email' },
                    { data: 'id_rol' },
                    {
                        data: 'acciones',
                        orderable: false,
                        className: 'text-center py-0 px-1',
                        render: function(data, type, row, meta) {
                            let a = '<a href="{{ URL }}?controller=users&action=edit&id=' + row.id + '" class="btn btn-warning btn-sm me-2 mt-1">Editar</a>'+
                            '<a href="{{ URL }}?controller=users&action=delete&id=' + row.id + '" class="btn btn-danger btn-sm me-2 mt-1">Eliminar</a>';
                            return a;
                        }
		            }

                ],
                order: [[1, 'asc']],
            });

            // Add event listener for opening and closing details
            $('#example tbody').on('click', 'td.dt-control', function () {
                var tr = $(this).closest('tr');
                var row = table.row(tr);

                if (row.child.isShown()) {
                    // This row is already open - close it
                    row.child.hide();
                    tr.removeClass('shown');
                } else {
                    // Open this row
                    row.child(format(row.data())).show();
                    tr.addClass('shown');
                }
            });
        });
    </script>
{% endblock %}
                    