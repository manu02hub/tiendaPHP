                                        <option>
                                            Inglaterra
                                                                                                                                                
                                                                                        
                                        </option>
                                        <option>
                                            EE.UU
                                                                                                                                                
                                                                                        
                                        </option>
                                        <option>
                                            Francia
                                                                                                                                                
                                                                                        
                                        </option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="inputState" class="form-label">
                                        Tipo de Usuario
                                                                                                                                    
                                                                                
                                    </label>
                                    <select id="inputState" class="form-select" name="rol">
                                        <option select value="1">
                                            Admin
                                                                                                                                                
                                                                                        
