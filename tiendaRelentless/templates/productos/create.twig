{% extends "layouts/private.twig" %}
{% block title %}
Index Admin


{% endblock %}
{% block style %}

{% endblock %}
{% block content %}

<body>

    <div class="row m-3">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <h5 class="card-header">Crear Producto</h5>
                <div class="card-body">
                    <form class="row g-3" action="{{ URL }}?controller=productos&action=save" method="POST" enctype="multipart/form-data">
                        <div class="col-md-6">
                            <label for="inputnombre" class="form-label">
                                Imagen
                            </label>
                            <input type="file" class="form-control" id="imagen" name="img">
                        </div>
                        <div class="col-md-6">
                            <label for="inputApellidos" class="form-label">
                                Nombre
                            </label>
                            <input type="text" class="form-control" id="nombre" name="nombre">
                        </div>
                        <div class="col-md-6">
                            <label for="stock" class="form-label">
                                Stock

                            </label>
                            <input type="number" class="form-control" id="stock" name="stock">
                        </div>
                        <div class="col-md-6">
                            <label for="stock" class="form-label">
                                Categoria
                            </label>
                            <select name="categoria" id="categoria" class="form-select">
                            {% for u in categorias %}
                                <option value="{{ u.id }}">{{ u.nombre }}</option>
                            {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="regular" class="form-label">
                                Regular Price

                            </label>
                            <input type="number" step="0.01" class="form-control" id="regular" name="regular">
                        </div>
                        <div class="col-md-6">
                            <label for="sale" class="form-label">
                                Sale Price

                            </label>
                            <input type="number" step="0.01" class="form-control" id="sale" name="sale">
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success" type="submit">Crear Producto</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
{% endblock %}
{% block script %}

{% endblock %}