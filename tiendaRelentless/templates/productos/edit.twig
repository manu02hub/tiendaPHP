{% extends "layouts/private.twig" %}
{% block title %}
Index Admin


{% endblock %}
{% block style %}

{% endblock %}
{% block content %}

<body>

    <div class="row m-3">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <h5 class="card-header">Editar Producto</h5>
                <div class="card-body">
                    <form class="row g-3" action="{{ URL }}?controller=productos&action=update" method="POST" enctype="multipart/form-data">
                        <input type="hidden" class="form-control" id="id" name="id" value ="{{ producto.id }}">    
                        <div class="col-md-6">
                            <label for="inputnombre" class="form-label">
                                Imagen
                            </label>
                            <input type="file" class="form-control" id="imagen" name="img" value="{{ producto.img }}">
                        </div>
                        <div class="col-md-6">
                            <label for="inputApellidos" class="form-label">
                                Nombre
                            </label>
                            <input type="text" class="form-control" id="nombre" name="nombre" value="{{ producto.nombre }}">
                        </div>
                        <div class="col-md-6">
                            <label for="stock" class="form-label">
                                Stock

                            </label>
                            <input type="number" class="form-control" id="stock" name="stock" value="{{ producto.stock }}">
                        </div>
                        <div class="col-md-6">
                            <label for="stock" class="form-label">
                                Categoria
                            </label>
                            <select name="categoria" id="categoria" class="form-select">
                            {% for u in categorias %}
								{% if u.id == producto.categoria_id %}
								    <option value="{{ u.id }}" selected>{{ u.nombre }}</option>
								{% else %}
									<option value="{{ u.id }}">{{ u.nombre }}</option>
								{% endif %}
							{% endfor %}
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="regular" class="form-label">
                                Regular Price

                            </label>
                            <input type="number" step="0.01" class="form-control" id="regular" name="regular" value="{{ producto.precio_regular }}">
                        </div>
                        <div class="col-md-6">
                            <label for="sale" class="form-label">
                                Sale Price

                            </label>
                            <input type="number" step="0.01" class="form-control" id="sale" name="sale" value="{{ producto.precio_venta }}">
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-warning" type="submit">Apply Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
{% endblock %}
{% block script %}

{% endblock %}