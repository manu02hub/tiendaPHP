{# Enlazar este fichero con la plantilla correspondiente #}
{% extends "layouts/private.twig" %}
{% block title %}
Index Pedidos


{% endblock %}
{% block style %}

{% endblock %}
{% block content %}


<div class="row mt-5 mb-5">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <h5 class="card-header">Pedidos de Usuarios</h5>
            <div class="card-body">
            {% set contador = 0 %}
            {% for p in pedidos %}
            <div class="card mb-3">
                    <div class="card-body">
                        <div class="row mb-2 d-flex justify-content-between align-items-center">
                            <div class="col-md-2 col-lg-2 col-xl-2">
                                <h6 class="text-muted">000 {{ p.id }}</h6>
                            </div>
                        <div class="col-md-3 col-lg-3 col-xl-3">

                        {% for u in usuario %}

                            {% if p.id_usuario == u.id %}
                            <p>{{ u.email }}</p>
                            {% endif %}

                        {% endfor %}
                        </div>
                        <div class="col-md-1 col-lg-1 col-xl-1 d-flex">
                            <h6 class="mb-0">{{ p.total }} $</h6>
                        </div>
                        <div class="col-md-2 col-lg-2 col-xl-2 offset-lg-1">
                            <h6 class="mb-0">{{ p.fecha_pedido }}</h6>
                        </div>
                        <div class="col-md-3 col-lg-3 col-xl-3 text-end">
                            <button class="btn btn-secondary btn-sm"
                            data-bs-toggle="collapse" data-bs-target="#collapseExample{{ contador }}" aria-expanded="false" aria-controls="collapseExample">
                            Show
            
                            </button>
                        </div>
                    </div>
                </div>
                <div class="collapse" id="collapseExample{{ contador }}">
                   
                    {% for pp in pedidos_has_productos %}

                        {% if p.id == pp.id_pedido %}

                            {% for pr in productos %}

                                {% if pp.id_producto == pr.id %}
                                <hr class="my-4">
                                    <div class="row d-flex justify-content-between align-items-center m-5">
                                        <div class="col-md-2 col-lg-2 col-xl-2">
                                            <img src="{{ pr.img }}" class="img-fluid rounded-3 w-50" alt="Cotton T-shirt">
                                        </div>
                                        <div class="col-md-3 col-lg-3 col-xl-3">
                                            <h6 class="text-muted">Shirt</h6>
                                            <h6 class="text-black mb-0">{{ pr.nombre }}</h6>
                                        </div>
                                        <div class="col-md-2 col-lg-2 col-xl-2 d-flex">
                            
                                            <p class="mb-0">{{ pp.cantidad }}</p>
                            
                            
                                        </div>
                                        <div class="col-md-2 col-lg-2 col-xl-2 d-flex">
                            
                                            <p class="mb-0">X</p>
                            
                            
                                        </div>
                                        <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                            <p class="mb-0">{{ pp.precio }} $</p>
                                        </div>
                                    </div>
                                {% endif %} 
                            {% endfor %}
                        {% endif %}
                    {% endfor %}
                    
                </div>
            </div>
            {% set contador = contador + 1 %}
            {% endfor %}
            </div>
          </div>
    </div>
</div>
{% endblock %}
{% block script %}

{% endblock %}